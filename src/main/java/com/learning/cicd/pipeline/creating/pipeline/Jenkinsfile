pipeline{
    agent any
    stages{
        stage("compile"){
			steps{ // D:\kishan.k\CICD\com.learning.cicd.pipeline\src\main\java\com\learning\cicd\pipeline\creating\pipeline
				bat 'javac src\\main\\java\\com\\learning\\cicd\\pipeline\\creating\\pipeline\\Test.java'
			}            
        }
        stage("run"){
            steps{
				bat 'java -cp src\\main\\java com.learning.cicd.pipeline.creating.pipeline.Test'
			}
        }
    }
    
    // this post will work only after completing all the stage in stages
    post{
		
		always{ // always will work in any scenario
			bat 'echo "KISHAN MAHESH KUSHWAHA ALWAYS"'
		}
		
		success{ // success will run only after all the stage get completed and we do not get any error while buildng the project
			bat 'echo "KISHAN MAHESH KUSHWAHA SUCCESS"'
		}
		
		failure{ // failure will work only if we get some error while running the jenkins project
			bat 'echo "KISHAN MAHESH KUSHWAHA FAILURE"'
		}
	} 
}